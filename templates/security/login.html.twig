{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg ftco_navbar ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <div class="navbar-brand">Card app</div>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item cta"><a href="{{ path('app_login') }}" class="nav-link mr-3"><span>Login</span></a></li>
                <li class="nav-item cta"><a href="{{ path('app_register') }}" class="nav-link"><span>Register</span></a></li>
            </ul>
        </div>
    </nav>

    <div class="container mt-head p-4 bg-white rounded" id="pageContent">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h3 class="mb-3">Sign in</h3>

            <div class="w-50">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-info mt-3" type="submit">
                    Sign in
                </button>
            </div>
        </form>
    </div>
{% endblock %}
